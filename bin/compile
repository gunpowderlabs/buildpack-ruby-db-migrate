#!/usr/bin/env bash

set -e            # fail fast
set -o pipefail   # don't ignore exit codes when piping output

# Configure directories
build_dir=$1
cache_dir=$2
env_dir=$3

blacklist_regex=${3:-'^(PATH|GIT_DIR|CPATH|CPPATH|LD_PRELOAD|LIBRARY_PATH)$'}
if [ -d "$env_dir" ]; then
  for e in $(ls $env_dir); do
    echo "$e" | grep -qvE "$blacklist_regex" &&
      export "$e=$(cat $env_dir/$e)"
    :
  done
fi

echo "WARNING: buildpack-ruby-db-migrate has been deprecated in favor of buildpack-rake-deploy-tasks"

if [ -z "$DEPLOY_TASKS" ]; then 
  echo "DEPLOY_TASKS has not been set. Defaulting to running rake db:migrate"
fi

tasks=${DEPLOY_TASKS-db:migrate}

echo "Running rake $tasks"

cd $build_dir && bundle exec rake $tasks
